<UserControl x:Class="Project123.Components.UserControls.ProductUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Project123.Components.UserControls"
             mc:Ignorable="d" 
              >
    <Grid Margin="10" Height="400" Width="250" Background="#FFEEEEEE">
            <Image Width="200" Height="200" VerticalAlignment="Top" Margin="0 50 0 0" Source="/Components/Images/4154393.png"/>
        <Grid Height="150" VerticalAlignment="Bottom" Margin="10 0 10 10">
            <TextBlock VerticalAlignment="Top"    Text="{Binding Name}"        FontSize="24"></TextBlock>
            <StackPanel Orientation="Horizontal">
                <TextBlock VerticalAlignment="Center" Text="{Binding Article}"     FontSize="20"></TextBlock>
                <TextBlock VerticalAlignment="Center" Margin="40 0 10 0" Text="{Binding Price}"     FontSize="20"></TextBlock>
                <TextBlock VerticalAlignment="Center" FontSize="20">Рублей</TextBlock>

            </StackPanel>
            <TextBlock VerticalAlignment="Bottom" Text="{Binding Description}" TextWrapping="NoWrap"  FontSize="16"  ></TextBlock>
            
        </Grid>
    </Grid>
</UserControl>
