<Page x:Class="Project123.Components.Pages.ProductEditPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="clr-namespace:Project123.Components.Pages"
      Title="ProductEditPage" Background="White">

    <Grid>
        <StackPanel>
            <TextBlock Text="Артикул" Margin="10"/>
            <TextBox Name="ArticleTextBox" Margin="10"/>

            <TextBlock Text="Наименование" Margin="10"/>
            <TextBox Name="NameTextBox" Margin="10"/>

            <TextBlock Text="Тип продукции" Margin="10"/>
            <ComboBox Name="ProductTypeComboBox" Margin="10">
                <ComboBoxItem>Один слой</ComboBoxItem>
                <ComboBoxItem>Два слоя</ComboBoxItem>
                <ComboBoxItem>Три слоя</ComboBoxItem>
                <ComboBoxItem>Супер мягкая</ComboBoxItem>
                <ComboBoxItem>Детская</ComboBoxItem>
            </ComboBox>

            <TextBlock Text="Изображение" Margin="10"/>
            <Image Name="ProductImage" Width="200" Height="200" Stretch="Uniform" />
            <Button Content="Выбрать изображение" Click="SelectImageButton_Click" />

            <TextBlock Text="Описание" Margin="10"/>
            <TextBox Name="DescriptionTextBox" Margin="10" AcceptsReturn="True"/>

            <TextBlock Text="Материалы" Margin="10"/>
            <DataGrid Name="MaterialsDataGrid" Margin="10" AutoGenerateColumns="True" Height="150"/>

            <Button Name="AddMaterialButton" Content="Добавить материал" Margin="10" Click="AddMaterialButton_Click"/>
            <Button Name="RemoveMaterialButton" Content="Удалить материал" Margin="10" Click="RemoveMaterialButton_Click"/>

            <Button Name="SaveButton" Content="Сохранить" Margin="10" Click="SaveButton_Click"/>
            <Button Name="DeleteButton" Content="Удалить" Margin="10" Click="DeleteButton_Click"/>
        </StackPanel>
    </Grid>
</Page>
